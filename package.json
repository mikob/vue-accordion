{
  "name": "@ztrehagem/vue-accordion",
  "description": "A simple accordion component of Vue.js.",
  "keywords": [
    "Vue.js",
    "Component",
    "Accordion"
  ],
  "version": "0.2.0",
  "author": "Shigeki Suwa <shigeki.suwa@ztrehagem.dev>",
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/vue-accordion.common.js",
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name vue-accordion src/lib/VueAccordion.vue",
    "gh-pages": "vue-cli-service build --dest gh-pages",
    "lint": "vue-cli-service lint",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-eslint": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/eslint-config-prettier": "^5.0.0",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.6.5",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^5.0.0",
    "prettier": "^1.19.1",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "devDependencies": {
    "lint-staged": "^9.5.0"
  },
  "peerDependencies": {
    "vue": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
